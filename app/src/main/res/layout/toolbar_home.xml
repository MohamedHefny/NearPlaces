<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:elevation="2dp"
    app:contentInsetStart="0dp"
    tools:targetApi="lollipop">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/toolbar_home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/home_title"
            android:textColor="@android:color/black"
            android:textSize="@dimen/toolbar_home_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_home_update_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/toolbar_home_place_mode_padding"
            android:text="@string/places_mode_realtime"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="@dimen/toolbar_home_title_size" />
    </RelativeLayout>

</androidx.appcompat.widget.Toolbar>